extends ./layout.pug

block content
  a(href="/superheroes/new" class="btn btn-primary") Create
  hr
  .row.text-center(style='display:flex; flex-wrap: wrap;')
    div(class="card-group")
      each superhero in superheroes
        div(class="col-xs-12 col-md-4 col-lg-3")
          a(href="/superheroes/" + superhero.id)
            div(class="card")
              img(class="card-img-top" src='/img/superheroes/' + superhero.image alt="superheroe.image")
              div(class="card-body")
                  h5(class="card-title")= superhero.name
                  p(class="card-text")= superhero.name
                  .row.justify-content-center
                    form#delete(action="/superheroes/" + superhero.id + "?_method=DELETE" method='POST')
                      button.btn.btn-danger Delete
                    //- a(href="/superheroes/" + superhero.id + "?_method=DELETE" class="btn btn-danger") Delete
                    a(href="/superheroes/" + superhero.id + "/update" class="btn btn-info") Update
