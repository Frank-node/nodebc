extends ./layout.pug

block content
  h1 Edit #{superhero.name}
  p This is a form that you can use to edit a superhero
  form(action="/superheroes/" + superhero.id + "?_method=PUT" method="post" enctype="multipart/form-data")
      input(type="file" placeholder="superhero picture" name="file")
      input(type="text" value=superhero.name placeholder="superhero name" required="required" name="superhero")
      button Update

  div(class="card" style="width: 18rem;")
    img(class="card-img-top" src='/img/superheroes/' + superhero.image alt="superheroe.image")
    div(class="card-body")
      h5(class="card-title")= superhero.name
      p(class="card-text")= superhero.name
